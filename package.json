{
	"name": "flutter-localization-helper",
	"displayName": "Flutter localization helper",
	"description": "Helps you to manage flutter assets and localization files",
	"icon": "resources/store_logo.png",
	"author": {
		"name": "smsimone"
	},
	"publisher": "smsimone",
	"repository": {
		"type": "git",
		"url": "https://github.com/smsimone/flutter_helper.git"
	},
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.62.0"
	},
	"categories": [
		"Other"
	],
	"keywords": [
		"flutter",
		"localization",
		"helper"
	],
	"activationEvents": [
		"workspaceContains:pubspec.yaml"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "flutterHelper.reload",
				"title": "Reload localization files",
				"category": "FlutterHelper"
			}
		],
		"configuration": {
			"title": "Flutter assets helper configs",
			"properties": {
				"flutter-localization-helper.assets.folder_path": {
					"type": "string",
					"description": "Path to the flutter assets folder",
					"default": "./assets"
				}
			}
		},
		"viewsContainers": {
			"activitybar": [
				{
					"id": "flutter_helper",
					"title": "Flutter helper",
					"icon": "resources/logo.svg"
				}
			]
		},
		"views": {
			"flutter_helper": [
				{
					"id": "available_translations",
					"name": "Translations"
				},
				{
					"id": "available_files",
					"name": "Translation files"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.2.2",
		"@types/node": "14.x",
		"@types/vscode": "^1.62.0",
		"@typescript-eslint/eslint-plugin": "^4.26.0",
		"@typescript-eslint/parser": "^4.26.0",
		"eslint": "^7.27.0",
		"glob": "^7.1.7",
		"mocha": "^8.4.0",
		"typescript": "^4.5.2",
		"vscode-test": "^1.5.2"
	}
}